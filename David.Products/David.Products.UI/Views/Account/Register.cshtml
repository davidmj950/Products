@model David.Products.Domain.Models.Customer
@{
    Layout = null;
    ViewBag.Title = "Register page";
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- JQuery Core -->
    <script src="http://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <!-- JQuery UI -->
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js" integrity="sha256-0YPKAwZP7Mp3ALMRVB2i8GXeEndvCq3eSl/WsAl1Ryk=" crossorigin="anonymous"></script>
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Favicon -->
    <link rel="icon" href="~/Assets/ordenador-portatil.png" type="image/png" />
    <!-- Viewport -->
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
    <!-- Date picker library -->
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <!--Custom styles-->
    @Styles.Render("~/Content/Register.css")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <!-- Custom js -->
    <script src="@Url.Content("~/Scripts/Devs.js")"></script>
</head>
<body>
    <div class="container">
        <div class="col-md-8">
            <div class="row">
                <h4 class="display-4">Register new user</h4>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "RegisterUser", @class = "col-12" }))
                {
                    <div class="row form-group">
                        <label for="FirstName" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.FirstName)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.FirstName, new { HtmlAttributes = new { @type = "text", @Class = "form-control", @placeholder = "Enter your first name" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="LastName" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.LastName)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.LastName, new { HtmlAttributes = new { @type = "text", @Class = "form-control", @placeholder = "Enter your last name" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="DateOfBirth" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.DateOfBirth)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.DateOfBirth, new { HtmlAttributes = new { @type = "text", @Class = "form-control datepicker", @placeholder = "Enter your date of birth" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="Telephone" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.Telephone)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.Telephone, new { HtmlAttributes = new { @type = "number", @Class = "form-control", @placeholder = "Enter your telephone" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="PhoneNumber" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.PhoneNumber)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.PhoneNumber, new { HtmlAttributes = new { @type = "number", @Class = "form-control", @placeholder = "Enter your phone number" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="Email" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.Email)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.Email, new { HtmlAttributes = new { @type = "email", @Class = "form-control", @placeholder = "Enter your email" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="Address" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.Address)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.Address, new { HtmlAttributes = new { @type = "text", @Class = "form-control", @placeholder = "Enter your address" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="Address" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.Neighborhood)</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(u => u.Neighborhood, new { HtmlAttributes = new { @type = "text", @Class = "form-control", @placeholder = "Enter your neighborhood" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="AuthorizationHabeasData" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.MaritalStatusId)</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(u => u.MaritalStatusId, new SelectList(ViewBag.MaritalStatusList, "Id", "Description"), "- Select -", new { @class = "form-control", id = "MaritalStatusId", Selected = true })
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="AuthorizationHabeasData" class="col-sm-4 col-form-label">@Html.DisplayNameFor(u => u.AuthorizationHabeasData)</label>
                        <div class="col-sm-8">
                            <label class="switch">
                                <input type="checkbox" />
                                @*@Html.CheckBoxFor(u => u.AuthorizationHabeasData, new { @Class = "custom-control-input" })*@
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                    <div class="row form-group text-center">
                        <div class="btn-group-justified">
                            <button type="submit" class="btn btn-primary" form="RegisterUser">Register</button>
                            <a class="btn btn-danger" href="@Url.Action("Index", "Account")">Cancel</a>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</body>
</html>
